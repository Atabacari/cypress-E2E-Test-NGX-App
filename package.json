{
  "scripts": {
    "delete:reports": "rimraf --glob 'cypress/results/**/*'",
    "prereport": "npm run delete:reports",
    "mochawesome:merge": "npx mochawesome-merge cypress/results/mochawesome/*.json > mochawesome.json && npx marge mochawesome.json --reportDir=cypress/results/mochawesome",
    "junit:merge": "npx junit-merge -d cypress/results/junit -o cypress/results/junit/results.xml",
    "report": "cypress run --reporter cypress-multi-reporters --reporter-options configFile=reporter-config.json",
    "cy:run": "npm run prereport && npx cypress run && npm run junit:merge && npm run mochawesome:merge",
    "cy:run_spec": "npx cypress run --spec 'cypress/e2e/accordionPageTest.spec.js'"
  },
  "dependencies": {
    "cypress": "^13.15.0"
  },
  "devDependencies": {
    "cypress-multi-reporters": "^1.6.4",
    "junit-merge": "^2.0.0",
    "mocha-junit-reporter": "^2.2.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "rimraf": "^6.0.1"
  }
}
